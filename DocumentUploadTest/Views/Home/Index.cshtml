@model List<FileUpload>
@{ 
    ViewData["Title"] = "Welcome";
}

<h1>This is a test header for staging now</h1>

<form asp-action="Index" method="post" style="margin-top: 20px;" enctype="multipart/form-data" >
    @for (int i = 0; i < Model.Count; i++)
    {
        <input type="hidden" asp-for="@Model[i].Id" />
        <input type="hidden" asp-for="@Model[i].Name" />
        <label>@Model[i].Name</label>
        <input asp-for="@Model[i].Files" />
        <span asp-validation-for="@Model[i].Files" class="text-danger"></span>
        <br /><br />
    }
    <input type="submit" />
</form>

